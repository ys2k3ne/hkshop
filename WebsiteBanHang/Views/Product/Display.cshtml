@model WebsiteBanHang.Models.Product

@{
    ViewData["Title"] = "Display";
}

<h1>Hiển thị</h1>

<div>
    <h2>@Model.Name</h2>    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Thể loại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 200px;" />
            </dd>
        }

    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model?.Id">Cập nhật</a> |
    <a asp-action="Index">Quay lại danh sách</a>
</div>
<style>
    body {
        background-color: lavender;
    }

    .form-control {
        border-color: #ccc;
    }

        .form-control:focus {
            border-color: #5a5a5a;
            box-shadow: none;
        }

    .btn-block {
        margin-bottom: 1rem;
    }
</style>