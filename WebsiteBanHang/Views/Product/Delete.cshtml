@model WebsiteBanHang.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Xoá</h1>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Thể loại
        </dt>
        @if (Model.Category?.Name == null)
        {
            <td>Không có thể loại</td>
        }
        else
        {
            <td>@Model.Category?.Name</td>
        }
        </dd>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <dd class="col-sm-10">
                <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 200px;" />
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <h3>Bạn muốn xoá @Model.Name?</h3>
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>

<style>
    body {
        background-color: lavender;
    }

    .form-control {
        border-color: #ccc;
    }

        .form-control:focus {
            border-color: #5a5a5a;
            box-shadow: none;
        }

    .btn-block {
        margin-bottom: 1rem;
    }
</style>